<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="90sp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent">
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textViewItemName" android:textSize="16sp"
            android:textStyle="bold" android:textAlignment="center"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/imageViewItem"/>
    <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/spinnerItem" android:entries="@array/flowerColor"
            android:background="@color/lightpink" android:layout_margin="2sp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:id="@+id/editTextNumberItem" android:textAlignment="center" android:ems="3"
            android:enabled="true" android:background="@color/lightpink" android:layout_marginLeft="2sp"
            android:layout_marginRight="2sp" android:layout_marginStart="2sp" android:layout_marginEnd="2sp"
            android:layout_marginBottom="2sp" android:maxLength="4"/>
</LinearLayout>
